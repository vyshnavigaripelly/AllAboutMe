{{> header }}
{{> progress_bar }}

<section class="mb6">
{{> messages }}
  <form class="margin-0-auto w-90 mb5 w-60-ns w-80-m mw7" action="/symptoms" method="post">
  <ol pa="0">

    <li class="f5 black-60 db mb2 tracked pt3 pb3 mr2"><span class='li mr2 w2'>&rarr;</span>
        <label for="symptoms__diagnosis">Do you have a mental health diagnosis and if so what is it?</label>

      <div class='black-60 mb2'>
        {{> hide_button}}
      <textarea class="mt3 w-100 vh-5 ba b--black-30 br3 h4" type="text" name="diagnosis_other" rows="8" cols="80" placeholder="Write here please" id="symptoms__diagnosis">{{data.diagnosis_other}}</textarea>
    </div>
    </li>

    <li class="f5 black-60 db mb2 tracked pt3 pb3 mr2"><span class='li mr2 w2'>&rarr;</span>
        <span id="symptoms__agreement">Do you agree with your diagnosis?</span>
      <br>
      <div class="dib" role="group" aria-labelledby="symptoms__agreement">
           <input id='Yes_agree' class="o-0 flex flex-auto-l" class="dib" type="radio" name="diagnosis_agreement" aria-label="Yes" value='yes' {{#if checked.agreement.yes}}checked{{/if}}>
           <label class="checkbox-label dib margin-0-auto grey-background br3 w4 mt3 h4 ba b--black-30" for="Yes_agree">
           <img class="tc-ns w-50 h-50 margin-0-auto pb2 db mt3" src="/img/checkbox-tick.png" alt="Yes">
               <div class="tc">Yes</div>
           </label>
           </input>

           <input id='No_disagree' class="o-0" class="dib" type="radio" name="diagnosis_agreement" aria-label="no" value='no' {{#if checked.agreement.no}}checked{{/if}}>
           <label class="checkbox-label dib margin-0-auto grey-background br3 w4 mt3 h4 ba b--black-30" for="No_disagree">
       <img class="tc-ns w-50 h-50 margin-0-auto pb2 db mt3" src="/img/checkbox-cross.png" alt="No">
           <div class="tc">No</div>
       </label>
           </input>
         </div>
    </li>

    <li class="f5 black-60 db mb2 tracked pt3 pb3 mr2"><span class='li mr2 w2'>&rarr;</span>
        <label for="symptoms__medication">Current medication (if any)</label>
        {{> hide_button}}
      <br>
        <textarea class="mt3 w-100 vh-5 ba b--black-30 br3 h4" type="text" name="medication" rows="8" cols="80" placeholder="Write here please" id="symptoms__medication">{{data.medication}}</textarea>
    </li>

    <li class="f5 black-60 db mb2 tracked pt3 pb3 mr2"><span class='li mr2 w2'>&rarr;</span>
        <label for="symptoms__therapies">What therapies have you used?</label>
        {{> hide_button}}
      <br>
        <textarea class="mt3 w-100 vh-5 ba b--black-30 br3 h4" type="text" name="therapies_other" rows="8" cols="80" placeholder="e.g. talking therapies, cognitive behavioural therapy, pyschotherapy..." id="symptoms__therapies">{{data.therapies_other}}</textarea>
    </li>

    <li class="f5 black-60 db mb2 tracked pt3 pb3 mr2"><span class='li mr2 w2'>&rarr;</span>
        <label for="symptoms__helpful">Did you find these therapies helpful? Why?</label>
        {{> hide_button}}
      <br>
      <textarea class="mt3 w-100 vh-5 ba b--black-30 br3 h4" type="text" name="therapies_helpful" rows="8" cols="80" placeholder="Write here please" id="symptoms__helpful">{{data.therapies_helpful}}</textarea>
    </li>

    <li class="f5 black-60 db mb2 tracked pt3 pb3 mr2"><span class='li mr2 w2'>&rarr;</span>
        <label for="symptoms__well">What helps you to keep well? (e.g friends, support from family?)</label>
        {{> hide_button}}
      <br>
      <textarea class="mt3 w-100 vh-5 ba b--black-30 br3 h4" type="text" name="keep_well" rows="8" cols="80" placeholder="Write here please" id="symptoms__well">{{data.keep_well}}</textarea>
    </li>
  </ol>
  {{>formnav}}
  </form>
</section>

{{>navbar}}
