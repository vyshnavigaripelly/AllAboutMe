{{> header }}

<div class="ofy-hid">
<div class="background-image cover aspect-ratio--object">
  <div class="main-background-overlay cover aspect-ratio--object ">
    <section class="mt6 mw6 center">
      {{> messages }}
      <form class="" action="/forgot" method="POST">
        <input class="darkgray bg-white-40 w-100 h3 pa1 bn mb2 pl2" id="email" type="email" placeholder="email" name="email" aria-label="email" {{#if userData}} value="{{userData.email}}" {{/if}} required>

        <button class="secondary-background--overlay w-100 h3 pa1 bn mb2" type="submit" name="submit"> Submit </button>
      </form>
        <p class="tc">Or <a href="/signup">sign up!</a></p>
    </section>
  </div>
</div>
</div>
